<%= form_with(model: post, class: "max-w-3xl mx-auto bg-white p-8 rounded-xl shadow-md space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 border border-red-300 px-4 py-3 rounded-md">
      <h2 class="font-bold mb-2">
        <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:
      </h2>
      <ul class="list-disc pl-5 space-y-1">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-lg font-semibold text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "block w-full rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 p-3 text-base shadow-sm" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-lg font-semibold text-gray-700 mb-2" %>
    <%= form.hidden_field :description, id: "post_description" %>
    <trix-editor input="post_description" class="trix-custom block w-full min-h-[400px] max-h-[600px] border border-gray-300 rounded-lg p-4 text-base leading-relaxed shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-200"></trix-editor>
  </div>

  <div>
    <%= form.submit "Save Post", class: "w-full sm:w-auto bg-blue-600 hover:bg-blue-500 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition-colors" %>
  </div>

  <div>
    <%= link_to "Back to posts", posts_path, class: "inline-block mt-4 text-blue-600 hover:text-blue-800 text-sm font-medium" %>
  </div>
<% end %>
